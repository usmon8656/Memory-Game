<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line_1"
        app:layout_constraintHorizontal_bias="0.9">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_time"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_time"
            android:text="00:00"
            android:textSize="20sp"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/line_1"
        app:layout_constraintGuide_percent="0.1"
        android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/img"
        app:layout_constraintTop_toBottomOf="@id/line_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_2"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.35"/>

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/img"
        app:layout_constraintTop_toBottomOf="@id/line_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_1"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.35"/>

    <ImageView
        android:id="@+id/img_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/img"
        app:layout_constraintTop_toBottomOf="@id/img_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img_5"
        app:layout_constraintRight_toLeftOf="@id/img_4"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.35"/>

    <ImageView
        android:id="@+id/img_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/img"
        app:layout_constraintTop_toBottomOf="@id/img_2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/img_6"
        app:layout_constraintLeft_toRightOf="@id/img_3"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.35"/>

    <ImageView
        android:id="@+id/img_5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/img"
        app:layout_constraintTop_toBottomOf="@id/img_3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_6"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.35"/>

    <ImageView
        android:id="@+id/img_6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/img"
        app:layout_constraintTop_toBottomOf="@id/img_4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_5"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintWidth_percent="0.35"/>

</androidx.constraintlayout.widget.ConstraintLayout>